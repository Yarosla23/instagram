<p style="color: green"><%= notice %></p>
<h1>Профиль <%= @user.email%></h1>
  <div class="container">
    <div class="row justify-content-center mt-5">
      <div class="col-md-6">
        <div class="card profile-card">
          <div class="card-body text-center">
            <!-- Аватарка -->
             <%= image_tag @user.avatar.url,  style: "width:200px; height: 200px;" , class: 'rounded-image'   if @user.avatar? %> 
            <!-- Имя и фамилия -->
            <h2 class="profile-name"><%= @user.name %><%=  @user.surname%></h2>
            <!-- Раздел о себе -->
            <p class="profile-bio"><%= @user.about%>.</p>
            <!-- Почта -->
            <p class="profile-email"><%= @user.email%></p>
          </div>
  <h2>Список подписчиков:</h2>


<h2>Подписан на:</h2>
  <% if @user.followed_users.present? %>
    <% @user.followed_users.each do |followed_user| %>
      <li><%= followed_user.email %></li>
    <% end %>
  <% else %>
    <li>Нет подписок.</li>
  <% end %>
</ul>
 </ul>
        </div>
      </div>
    </div>
  </div>

  <!-- Подключение Bootstrap скриптов -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>


<%= link_to "New post", new_post_path %>
<div id="posts">
  <% @posts.reverse_each   do |post| %>
  
<p style="color: green"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-md-4 offset-md-4">
      <div class="card">
        <div class="card-header">
          <strong><%= post.user.email %> </strong>
        </div>
         <%= image_tag post.picture.url,  style: "width:414px; height: 500px;" if post.picture? %> 
        <div class="card-body">
          <h5 class="card-title"><%=post.title %></h5>
          <div class="card-text"><%=post.description %></div>
          <span class="badge bg-primary"><%= post.tags%></span>
        </div>
        <div class="card-footer">
          
<div class="card-footer">
            <div class="post-likes">
                  <%like = current_user.likes.find_by(post: post)%>
                  <% if like.nil?%>
                     <%= button_to "like", likes_path,  params: {like: {post_id:post.id }}, method: :post, class: 'heart-button'%>
                     <%= post.likes.count %>
                  <%else%>
                      <%= button_to "Unlike", like_path(like), method: :delete, class: 'heart-button' %>
                      <%= post.likes.count %>
                  <%end%>          
             </div>
        </div>

          <button type="button" class="btn btn-secondary"><%= link_to "Комментарии", post, class:"navbar-brand" %></button>
          <% if user_signed_in? && current_user.id  == post.user.id %>
          <button type="button" class="btn btn-secondary"> <%= link_to "Редактировать пост", edit_post_path(post), class:"navbar-brand" %></button>
          <div>
          <%end%>
</div>
        </div>
      </div>
    </div>
  </div>
</div>

  <% end %>
</div>
