<div id="<%= dom_id post %>">


  <p>
<div  class ="col-xl-5 col-md-6 col-sm-8 col-20  "style ="margin :auto">

          <div class="p-3 text-dark-emphasis bg-dark-subtle border border-dark-subtle rounded-3">
          <p class="card-text"><%= post.title %>  </p>
            <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
            <div class="card-body">
            <% image_tag post.picture.url if post.picture? %>
            <small class="text-body-secondary"> <%= post.tags   %>  </p></small>
              <p class="card-text"><%= post.description %>  </p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <div>
    <% if user_signed_in? %>
    <%like = current_user.likes.find_by(post: post)%>
    <% if like.nil?%>
<%= button_to "like", likes_path,  params: {like: {post_id:
post.id }}, method: :post, class: 'heart-button'%>
<%else%>
 <%= button_to "Unlike", like_path(like),  method: :delete%>
<%end%>
<%end%>
<p> <%= post.likes.count%> </p>
</div>
                  <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                  <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                </div>
                <small class="text-body-secondary"><%= post.user.email %>  </p></small>
              </div>
            </div>
          </div>
        </div>